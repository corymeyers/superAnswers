{{#if addNewQuestion}}
<h1>New Question</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="head">Question:</label>
          {{input value=head id="head"}}
        </div>

        <div class="form-group">
          <label for="author">Your Name:</label>
          {{input value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="notes">Additional details:</label>
          {{input value=notes id="notes"}}
        </div>

        <button {{action 'saveQ'}}>Save</button>
      </form>
    </div>

  {{else}}
    <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
